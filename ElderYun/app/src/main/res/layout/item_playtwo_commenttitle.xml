<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="评论"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.huasky.elderyun.common.utils.widget.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/circleview_playtwo"
            android:maxHeight="45dp"
            android:maxWidth="45dp"
            android:minHeight="40dp"
            android:minWidth="40dp"
            app:srcCompat="@drawable/ic_main_title_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_playtwo"
            android:inputType="text"
            android:maxLines="1"
            android:background="@drawable/bg_circle"
            android:layout_toRightOf="@id/circleview_playtwo"
            android:layout_centerVertical="true"
            android:hint="快来说说你的感想吧"
            android:imeOptions="actionSend"
            android:textSize="20sp"
            android:textColorHint="@color/colorEditHint"
            android:textColor="@color/colorEdit"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:layout_height="45dp" />
    </RelativeLayout>
</LinearLayout>